{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"module": "es2020",
		"target": "es2020",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es2017", "dom"]
	}
}
